@import "tailwindcss";

@layer base {
  :root {
    /* Eco-tech agricultural theme with warm tones and neon green accents */
    --color-background: oklch(95% 0.02 42);
    --color-foreground: oklch(30% 0.05 150);

    --color-card: oklch(100% 0 0);
    --color-card-foreground: oklch(30% 0.05 150);

    --color-popover: oklch(100% 0 0);
    --color-popover-foreground: oklch(30% 0.05 150);

    /* Deep forest green primary */
    --color-primary: oklch(40% 0.1 150);
    --color-primary-foreground: oklch(95% 0.05 42);

    /* Wheat gold secondary */
    --color-secondary: oklch(70% 0.12 42);
    --color-secondary-foreground: oklch(30% 0.05 150);

    --color-muted: oklch(90% 0.01 42);
    --color-muted-foreground: oklch(55% 0.03 150);

    /* Neon green accent */
    --color-accent: oklch(70% 0.18 120);
    --color-accent-foreground: oklch(30% 0.05 150);

    --color-destructive: oklch(60% 0.2 0);
    --color-destructive-foreground: oklch(98% 0.01 210);

    --color-border: oklch(87% 0.01 150);
    --color-input: oklch(90% 0.01 150);
    --color-ring: oklch(70% 0.18 120);
  }

  * {
    border-color: var(--color-border);
  }

  body {
    background-color: var(--color-background);
    color: var(--color-foreground);
  }
}

/* Glassmorphism utilities */
.glass {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid rgba(150, 150, 150, 0.3);
}

.glass-strong {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(24px);
  -webkit-backdrop-filter: blur(24px);
  border: 1px solid rgba(150, 150, 150, 0.3);
}

/* Glow effects */
.glow-accent {
  box-shadow: 0 0 20px rgba(0, 255, 0, 0.3),
              0 0 40px rgba(0, 255, 0, 0.15);
}

.glow-primary {
  box-shadow: 0 0 20px rgba(34, 139, 34, 0.3),
              0 0 40px rgba(34, 139, 34, 0.15);
}

/* Floating animation */
@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-20px); }
}

.animate-float {
  animation: float 6s ease-in-out infinite;
}

/* Particle animation */
@keyframes particle-float {
  0% {
    transform: translateY(0) translateX(0) rotate(0deg);
    opacity: 0;
  }
  10% {
    opacity: 1;
  }
  90% {
    opacity: 1;
  }
  100% {
    transform: translateY(-100vh) translateX(50px) rotate(180deg);
    opacity: 0;
  }
}
